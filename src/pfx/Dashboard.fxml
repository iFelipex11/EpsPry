<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="12" style="-fx-padding: 20;" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pfx.DashboardController">
  <Label style="-fx-font-size: 18;" text="Panel principal" />
  <Label fx:id="lblBienvenida" text="." />

  <HBox alignment="CENTER_LEFT" spacing="8">
    <Label text="Doctor:" />
    <ComboBox fx:id="cmbDoctor" prefWidth="260" />
    <Label text="Fecha:" />
    <DatePicker fx:id="dpFecha" />
    <Button onAction="#cargarAgenda" text="Cargar" />
    <Button onAction="#logout" style="-fx-background-color: #e33; -fx-text-fill: white;" text="Cerrar sesión" />
    <Button onAction="#nuevaCita" text="Nueva cita" />
    <Button onAction="#cambiarEstado" text="Cambiar estado" />
    <Button onAction="#abrirHistoria" text="Historia" />
      <Button onAction="#abrirNotas" text="Notas" />
  </HBox>

  <TableView fx:id="tblAgenda" prefHeight="360">
    <columns>
      <TableColumn fx:id="colHora" prefWidth="80" text="Hora" />
      <TableColumn fx:id="colPaciente" prefWidth="220" text="Paciente" />
      <TableColumn fx:id="colEstado" prefWidth="120" text="Estado" />
      <TableColumn fx:id="colObs" prefWidth="260" text="Observación" />
    </columns>
  </TableView>

  <Label fx:id="lblMsg" textFill="red" />
</VBox>
